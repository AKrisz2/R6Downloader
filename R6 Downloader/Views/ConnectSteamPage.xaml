<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="R6_Downloader.Views.ConnectSteamPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:R6_Downloader.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid>
        
        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            
            <TextBox Width="300" Header="Username" Text="" Margin="8,0,8,0" x:Name="usernameTB"/>

            <PasswordBox Header="Password" Width="300" Margin="8,0,8,0" x:Name="passwordBox" PasswordRevealMode="Hidden" AutomationProperties.Name="passwordBox" />
            
            <CheckBox x:Name="revealPasswordBox" Content="Show Password" IsChecked="False" Checked="revealPasswordBox_Changed" Unchecked="revealPasswordBox_Changed" Margin="8,0,0,0"/>
        </StackPanel>

    </Grid>
    
    
    
</Page>
