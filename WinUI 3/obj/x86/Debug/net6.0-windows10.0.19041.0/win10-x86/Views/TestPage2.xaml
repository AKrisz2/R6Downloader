<Page
    x:Class="WinUI_3.Views.TestPage2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUI_3.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="47,16,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            <TextBlock x:ConnectionId='3' Text="This is the first page!"
                   FontSize="48"
                   FontWeight="ExtraBold"
                       x:Name="HomepageHeader"/>
            <StackPanel Orientation="Horizontal" Padding="0,25">
                <Grid Margin="0,0,30,0" CornerRadius="20">
                    <Rectangle x:ConnectionId='10' Fill="white" Width="300" Height="175" x:Name="FirstImage"/>
                    <Button x:ConnectionId='11' Height="175" Width="300" x:Name="FirstButton"                          />
                </Grid>

                <Grid Margin="0,0,30,0" CornerRadius="20">
                    <Rectangle x:ConnectionId='8' Fill="white" Width="300" Height="175" x:Name="SecondImage"/>
                    <Button x:ConnectionId='9' Height="175" Width="300" x:Name="SecondButton"                           />
                </Grid>

                <Grid Margin="0,0,30,0" CornerRadius="20">
                    <Rectangle x:ConnectionId='6' Fill="white" Width="300" Height="175" x:Name="ThirdImage"/>
                    <Button x:ConnectionId='7' Height="175" Width="300" x:Name="ThirdButton"                          />
                </Grid>

                <Grid Margin="0,0,30,0" CornerRadius="20">
                    <Rectangle x:ConnectionId='4' Fill="white" Width="300" Height="175" x:Name="FourthImage"/>
                    <Button x:ConnectionId='5' Height="175" Width="300" x:Name="FourthButton"                           />
                </Grid>
            </StackPanel>
        </StackPanel>

        <!--Page Content-->
        <Rectangle Stroke="White" Grid.Row="1" Width="1290" HorizontalAlignment="Left" Fill="Transparent"/>
        <Grid Grid.Row="1" Width="1290" HorizontalAlignment="Left">
            <TextBlock x:ConnectionId='2' Text="" x:Name="PageContent"/>
        </Grid>
    </Grid>
</Page>

